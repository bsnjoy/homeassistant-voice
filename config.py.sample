# - entity_id: The Home Assistant entity ID to control
# - action: The action to perform (e.g. "turn_on", "turn_off")
commands = [
    {
        "command": "turn on ac",
        "aliases": ["turn on air conditioner", "включи кондицонер", "включи кондер"],
        "entity_id": "climate.faikin_office_mqtt_hvac",
        "action": "turn_on"
    },
    {
        "command": "turn off ac",
        "aliases": ["turn off air conditioner", "выключи кондицонер", "выключи кондер"],
        "entity_id": "climate.faikin_office_mqtt_hvac",
        "action": "turn_off"
    }
]